{% extends 'BackBundle:Default:backLayout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/back.css') }}">
{% endblock %}

{% block content %}
<div class="container admin">
    <h2>Présentation du concours /  <a href="{{ path('presentation_new') }}">créer une présentation de concours </a></h2>
    <div class="table-responsive-vertical shadow-z-1">
        <!-- Table starts here -->
        <table id="table" class="table table-hover">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Title (pour version anglaise)</th>
                    <th>Sous-titre un</th>
                    <th>Subtitle one (pour version anglaise)</th>
                    <th>Paragraphe un</th>
                    <th>Section one (pour version anglaise)</th>
                    <th>Sous-titre deux</th>
                    <th>Subtitle two (pour version anglaise)</th>
                    <th>Paragraphe deux</th>
                    <th>Section two (pour version anglaise)</th>
                    <th>Paragraphe trois</th>
                    <th>Section three (pour version anglaise)</th>
                    <th>Sous-titre trois </th>
                    <th>Subtitle three (pour version anglaise)</th>
                    <th>Paragraphe quatre</th>
                    <th>Section four (pour version anglaise)</th>
                    <th>Paragraphe cinq</th>
                    <th>Section five (pour version anglaise)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for presentation in presentations %}
                <tr>
                    {#<td><a href="{{ path('presentation_show', { 'id': presentation.id }) }}">{{ presentation.id }}</a></td>#}
                    <td>{{ presentation.titre }}</td>
                    <td>{{ presentation.title }}</td>
                    <td>{{ presentation.soustitreun }}</td>
                    <td>{{ presentation.subtitleone }}</td>
                    <td>{{ presentation.paragrapheun }}</td>
                    <td>{{ presentation.sectionone }}</td>
                    <td>{{ presentation.soustitredeux }}</td>
                    <td>{{ presentation.subtitletwo }}</td>
                    <td>{{ presentation.paragraphedeux }}</td>
                    <td>{{ presentation.sectiontwo }}</td>
                    <td>{{ presentation.paragraphetrois }}</td>
                    <td>{{ presentation.sectionthree }}</td>
                    <td>{{ presentation.soustitretrois }}</td>
                    <td>{{ presentation.subtitlethree }}</td>
                    <td>{{ presentation.paragraphequatre }}</td>
                    <td>{{ presentation.sectionfour }}</td>
                    <td>{{ presentation.paragraphecinq }}</td>
                    <td>{{ presentation.sectionfive }}</td>
                    <td data-title="Actions">
                        <a href="{{ path('presentation_show', { 'id': presentation.id }) }}"><i class="fa fa-eye fa-2x" aria-hidden="true"></i></a>
                        <a href="{{ path('presentation_edit', { 'id': presentation.id }) }}"><i class="fa fa-pencil fa-2x" aria-hidden="true"></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
