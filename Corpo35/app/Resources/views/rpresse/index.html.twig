{% extends 'BackBundle:Default:backLayout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/back.css') }}">
{% endblock %}


{% block content %}
    <div class="container admin">

        <h2>Revue de presse  / <a href="{{ path('rpresse_new') }}">cr√©er un article </a></h2>

        <div class="table-responsive-vertical shadow-z-1">
            <!-- Table starts here -->
            <table id="table" class="table table-hover">
                <thead>
                <tr>
                    <th>Document</th>
                    <th>Description</th>
                    <th>Source</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for rpresse in rpresses %}
                    <tr>
                        {#<td><a href="{{ path('rpresse_show', { 'id': rpresse.id }) }}">{{ rpresse.id }}</a></td>#}
                        <td>{{ rpresse.document }}</td>
                        <td>{{ rpresse.description }}</td>
                        <td>{{ rpresse.source }}</td>
                        <td>{% if rpresse.date %}{{ rpresse.date|date('Y-m-d') }}{% endif %}</td>
                        <td data-title="Actions">
                            <a href="{{ path('rpresse_show', { 'id': rpresse.id }) }}"><i class="fa fa-eye fa-2x" aria-hidden="true"></i></a>
                            <a href="{{ path('rpresse_edit', { 'id': rpresse.id }) }}"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
