{% extends 'BackBundle:Default:backLayout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/back.css') }}">
{% endblock %}

{% block content %}
    {% form_theme form'bootstrap_3_layout.html.twig' %}

    <div class="container admin">
        <h2>Revue de presse création /    <a href="{{ path('rpresse_index') }}">retour à la liste</a></h2>
        <h2 style="font-size: 1.5em">Nota bene : Privilégiez des photos carré de moins de 2Mo / <br />
            Si la source est une vidéo mettre le lien de cette vidéo.</h2>
        <div class="table-responsive-vertical shadow-z-1">
            <table id="table" class="table table-hover table-mc-light-grey">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn btn-success" type="submit"><i class="fa fa-check" aria-hidden="true"></i></button>
                {{ form_end(form) }}
            </table>
        </div>
    </div>

{% endblock %}
