{% extends 'BackBundle:Default:backLayout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('css/back.css') }}">
{% endblock %}

{% block content %}

<div class="container admin">

    <h2>Jury liste  / <a class="text-right" href="{{ path('jury_new') }}">Cr√©er un jury </a></h2>

    <div class="table-responsive-vertical shadow-z-1">
        <!-- Table starts here -->
        <table id="table" class="table table-hover">

        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Entreprise</th>
                <th>Mail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for jury in juries %}
            <tr>
                <td>{{ jury.nom }}</td>
                <td>{{ jury.prenom }}</td>
                <td>{{ jury.entreprise }}</td>
                <td>{{ jury.mail }}</td>
                <td>
                    <a href="{{ path('jury_show', { 'id': jury.id }) }}">show<i class="fa fa-eye fa-2x" aria-hidden="true"></i></a>
                    <a href="{{ path('jury_edit', { 'id': jury.id }) }}">edit<i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 </div>
{% endblock %}
