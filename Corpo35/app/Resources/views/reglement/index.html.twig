{% extends 'BackBundle:Default:backLayout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/back.css') }}">
{% endblock %}

{% block content %}
    {% for reglement in reglements %}
    <div class="container admin">
        <div class="table-responsive-vertical shadow-z-1">
            <table id="table" class="table table-hover table-mc-light-grey">
            <h2>Règlement / </h2>
            <thead>
            <tr>
                <th>Article 1 - Objet / Paragraphe 1</th>
                <td>{{ reglement.paragrapheun }}</td>
            </tr>

            <tr>
                <th>Article 2 - Modalités de participation au concours</th>
                <td>{{ reglement.paragraphedeux }}</td>
            </tr>
            <tr>
                <th>Article 3 - Déroulement du concours Corpo 35 / 3.1 sélection des dossiers</th>
                <td>{{ reglement.paragraphetrois }}</td>
            </tr>

            <tr>
                <th>Article 3 / 3.2 journée d'intégration des candidats sélectionnés</th>
                <td>{{ reglement.paragraphequatre }}</td>
            </tr>
            <tr>
                <th>Article 3 / 3.3 phase de recherche et de création</th>
                <td>{{ reglement.paragraphecinq }}</td>
            </tr>
            <tr>
                <th>Article 3 / 3.4 finale, désignation des lauréats</th>
                <td>{{ reglement.paragraphesix }}</td>
            </tr>
            <tr>
                <th>Article 3 / 3.5 prix, récompenses</th>
                <td>{{ reglement.paragraphesept }}</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <a href="{{ path('reglement_edit', { 'id': reglement.id }) }}"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
                </td>
            </tr>
        </tbody>
        </table>
        </div>
    </div>
    {% endfor %}
{% endblock %}
