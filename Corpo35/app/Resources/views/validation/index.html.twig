{% extends 'base.html.twig' %}

{% block body %}
    <h1>Validations list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Validation</th>
                <th>Commentaire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for validation in validations %}
            <tr>
                <td><a href="{{ path('validation_show', { 'id': validation.id }) }}">{{ validation.id }}</a></td>
                <td>{% if validation.validation %}Yes{% else %}No{% endif %}</td>
                <td>{{ validation.commentaire }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('validation_show', { 'id': validation.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('validation_edit', { 'id': validation.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('validation_new') }}">Create a new validation</a>
        </li>
    </ul>
{% endblock %}
