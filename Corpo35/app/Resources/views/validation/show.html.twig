{% extends 'BackBundle:Default:backLayout.html.twig' %}

{% block content %}
    <h1>Validation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ validation.id }}</td>
            </tr>
            <tr>
                <th>Validation</th>
                <td>{% if validation.validation %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ validation.commentaire }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('validation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('validation_edit', { 'id': validation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
