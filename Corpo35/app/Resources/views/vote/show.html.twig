{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vote</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vote.id }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ vote.note }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vote_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('vote_edit', { 'id': vote.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
