{% extends 'BackBundle:Default:backLayout.html.twig' %}

    {% block stylesheet %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/back.css') }}">
    {% endblock %}

{% block content %}
<div class="container admin">
    <div class="table-responsive-vertical shadow-z-1">
        <table id="table" class="table table-hover table-mc-light-grey">
        <h2>Concours / <a href="{{ path('concours_index') }}">retour à la liste </a> /  <a href="{{ path('concours_edit', { 'id': concour.id }) }}">éditer</a></h2>
        <thead>
            <tr>
                <th>Titre</th>
                <th>Sous-titres</th>
                <th>Paragraphe</th>
                <th>Puces</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ concour.titre }}</td>
                <td>{{ concour.soustitres }}</td>
                <td>{{ concour.paragraphe }}</td>
                <td>{{ concour.puces }}</td>
                <td>
                    {{ form_start(delete_form) }}
                    <button class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></button>
                    {{ form_end(delete_form) }}
                </td>
            </tr>
        </tbody>
            <tfoot>
        </table>
    </div>
</div>
{% endblock %}
