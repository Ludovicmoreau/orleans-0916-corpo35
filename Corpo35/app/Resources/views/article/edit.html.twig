{% extends 'BackBundle:Default:backLayout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/back.css') }}" xmlns="http://www.w3.org/1999/html">
{% endblock %}

{% block content %}
    {% form_theme edit_form'bootstrap_3_layout.html.twig' %}

    <div class="container admin">
        <h2>Article / <a href="{{ path('article_index') }}">retour à la liste</a></h2>
        <h2 style="font-size: 1.3em">Nota bene : les photos ne doivent pas dépasser 2Mo et doivent être d'une bonne dimension. <br />
            Attention quand on édite on doit remettre la photo.
        </h2>


        {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <button class="btn btn-success"><i class="fa fa-check" aria-hidden="true"></i></button>
        {{ form_end(edit_form) }}

        {{ form_start(delete_form) }}
        <button class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></button>

        {{ form_end(delete_form) }}

    </div>

{% endblock %}
