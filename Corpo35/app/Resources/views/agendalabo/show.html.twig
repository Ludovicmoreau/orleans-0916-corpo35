{% extends 'base.html.twig' %}

{% block body %}
    <h1>Agendalabo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ agendaLabo.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if agendaLabo.date %}{{ agendaLabo.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Demijournee</th>
                <td>{{ agendaLabo.demiJournee }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('agendalabo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('agendalabo_edit', { 'id': agendaLabo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
