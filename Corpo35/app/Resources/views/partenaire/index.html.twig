{% extends 'base.html.twig' %}

{% block body %}
    <h1>Partenaires list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Logo</th>
                <th>Resume</th>
                <th>Contenu1</th>
                <th>Contenu2</th>
                <th>Contenu3</th>
                <th>Contenu4</th>
                <th>Website</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partenaire in partenaires %}
            <tr>
                <td>{{ partenaire.nom}}</td>
                <td><a href="{{ path('partenaire_show', { 'id': partenaire.id }) }}"></a></td>
                <td><img src="{{ asset('upload/' ~  partenaire.logo )}}"></td>
                <td>{{ partenaire.resume }}</td>
                <td>{{ partenaire.contenu }}</td>
                <td>{{ partenaire.website }}</td>
                <td>{{ partenaire.email }}</td>
                <td>{{ partenaire.phone }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('partenaire_show', { 'id': partenaire.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('partenaire_edit', { 'id': partenaire.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('partenaire_new') }}">Create a new partenaire</a>
        </li>
    </ul>
{% endblock %}
