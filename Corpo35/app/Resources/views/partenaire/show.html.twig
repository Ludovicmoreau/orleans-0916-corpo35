{% extends 'BackBundle:Default:backLayout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/back.css') }}">
{% endblock %}

{% block content %}

<div class="container admin">
    <div class="table-responsive-vertical shadow-z-1">
        <table id="table" class="table table-hover table-mc-light-grey">
            <h2>Partenaire / {% if is_granted ('ROLE_ADMIN') %}<a href="{{ path('partenaire_index') }}">retour à la liste /</a> {% endif %}  <a href="{{ path('partenaire_edit', { 'id': partenaire.id }) }}">éditer</a></h2>
            <thead>
            <tr>
                <th>Nom</th>
                <td>{{ partenaire.nom }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ partenaire.resume }}</td>
            </tr>
            <tr>
                <th>Résumé (traduction en anglaise)</th>
                <td>{{ partenaire.resumeEn }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td><img src="{{ asset('upload/' ~ partenaire.logo) }}"></td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ partenaire.contenu }}</td>
            </tr>
            <tr>
                <th>Contenu (traduction en anglais)</th>
                <td>{{ partenaire.contenuEn}}</td>
            </tr>
            <tr>
                <th>Site web</th>
                <td>{{ partenaire.website }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ partenaire.email }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ partenaire.phone }}</td>

            </thead>
            <tbody>
            <tr>
                <td>
                    {{ form_start(delete_form) }}
                        <button class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></button>
                    {{ form_end(delete_form) }}
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
    {#<a  href="{{ path('index') }}">{{ 'Retour au site'| trans }}</a>#}
{% endblock %}
