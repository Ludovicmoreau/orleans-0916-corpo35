{% extends 'base.html.twig' %}

{% block body %}
    <h1>Agenda_evenement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ agenda_evenement.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if agenda_evenement.date %}{{ agenda_evenement.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ agenda_evenement.lieu }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ agenda_evenement.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ agenda_evenement.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('agenda_evenement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('agenda_evenement_edit', { 'id': agenda_evenement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
