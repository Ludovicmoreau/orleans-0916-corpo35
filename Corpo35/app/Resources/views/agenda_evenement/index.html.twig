{% extends 'BackBundle:Default:backLayout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/back.css') }}">
{% endblock %}


{% block content %}
    <div class="container admin">

        <h2>Agenda  / <a href="{{ path('agenda_evenement_new') }}">crÃ©er un article </a></h2>

        <div class="table-responsive-vertical shadow-z-1">
            <!-- Table starts here -->
            <table id="table" class="table table-hover">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Lieu</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for agenda_evenement in agenda_evenements %}
                    <tr>
                        {#<td><a href="{{ path('agenda_evenement_show', { 'id': agenda_evenement.id }) }}">{{ agenda_evenement.id }}</a></td>#}
                        <td>{% if agenda_evenement.date %}{{ agenda_evenement.date|date('d-m-Y') }}{% endif %}</td>
                        <td>{{ agenda_evenement.lieu }}</td>
                        <td>{{ agenda_evenement.titre }}</td>
                        <td>{{ agenda_evenement.description }}</td>
                        <td data-title="Actions">
                            <a href="{{ path('agenda_evenement_show', { 'id': agenda_evenement.id }) }}"><i class="fa fa-eye fa-2x" aria-hidden="true"></i></a>
                            <a href="{{ path('agenda_evenement_edit', { 'id': agenda_evenement.id }) }}"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}