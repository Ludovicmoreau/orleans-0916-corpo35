    {% extends 'FrontBundle:Default:index.html.twig' %}
    {% block stylesheet %}
        <link rel="stylesheet" href="{{ asset('css/blog_style.css') }}">
    {% endblock %}

{% block content %}

    <div class='container article'>
        <h1 class="title_actu"><i class="fa fa-pagelines pagelines_title" aria-hidden="true"></i> Notre actu</h1>
        {% for article in articles %}
            <div class='blog-posts'>
                <div class='row post featured'>
                    <a href="{{ path('new-comment', {'id':article.id}) }}">
                        <div class='image'><img class="img-responsive img-article" src="{{ asset('upload/' ~  article.photo )}}">
                            <div class='date'>{% if article.date %}{{ article.date|date('d F') }}{% endif %}</div>
                        </div>
                        <div class='content'>
                            <h3>{{ article.titre }}</h3>
                            <p>{{ article.contenu | truncate(150, true, "...")}}</p>
                            <div class='meta'>
                                <div class='icon-comment'><i class="fa fa-comment-o" aria-hidden="true"></i> 22 Comments</div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        {% endfor %}
        <p class="text-right"><a href="{{ path('list_article') }}" class="button">Anciens Posts <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
        </p>
    </div>

{% endblock %}

