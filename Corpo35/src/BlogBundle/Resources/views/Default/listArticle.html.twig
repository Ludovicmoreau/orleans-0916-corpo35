{% extends 'FrontBundle:Default:layout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/blog_style.css') }}">
{% endblock %}

{% block content %}
    <div class="container">
        {% if limit != null %}
        <h1 class="title_actu"><i class="fa fa-pagelines pagelines_title" aria-hidden="true"></i>  Toutes nos actu</h1>
        {% endif %}
        {% for article in listArticles %}
            <div class="card">
                <div class="row">
                    <div class="col-md-12">
                        <picture>
                            <img class="img-article" src="{{ asset('upload/' ~  article.photo )}}">
                        </picture>
                    </div>
                    <div class="col-md-12">
                        <div class="card--info">
                            <h3 class="category">{{ article.date | localizeddate('medium', 'none', app.request.attributes.get('_locale') ) }}</h3>
                            <h2 class="title">
                                {{ article.titre }}
                            </h2>
                            <p class="teaser">
                                {{ article.contenu | truncate(150, true, "...")}}
                            </p>
                            <a href="{{ path('new-comment', {'id':article.id}) }}" class="button">
                                Lire Plus...
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}


    </div>

{% endblock %}

{% block JS %}

    <script>


    </script>

{% endblock %}
