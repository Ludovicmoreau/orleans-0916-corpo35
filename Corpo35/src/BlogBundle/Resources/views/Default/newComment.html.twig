
{% extends 'FrontBundle:Default:index.html.twig' %}
    {% block stylesheet %}
            <link rel="stylesheet" href="{{ asset('css/pageArticle_style.css') }}">
    {% endblock %}

{% block content %}

<div class="container">
        <main>

                <article>
                        <div class="wrap-div wrap-div-right">
                                <img class="img-responsive text-left" src="{{ asset('upload/' ~  article.photo )}}">
                        </div>
                        <h1 class="titre_page_article">{{ article.titre }}</h1>
                        <p>{{ article.contenu }}</p>
                        <p class="post-end clearfix">{% if article.date %}{{ article.date|date('d-m-Y') }}{% endif %}<span>{{ article.auteur }}</span></p>





                </article>


        <div id="form-main">
                <div id="form-div">
                        <form class="form" id="form1">
                                <p class="name">
                                        <input name="name" value="" type="text" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" placeholder="Name" id="name" />
                                </p>
                                <p class="text">
                                        <textarea name="text" class="validate[required,length[6,300]] feedback-input" id="comment" placeholder="Message"></textarea>
                                </p>
                                <div class="submit">
                                        <input type="submit" value="Envoyer" id="button-blue"/>
                                        <div class="ease"></div>
                                </div>
                        </form>
                </div>
                <div class="well">
                        {{ form_start(form, {'attr':{'action': path('new-comment', {'id':article.id})}}) }}
                        {{ form_widget(form) }}
                        <input class="btn btn-lg btn-success" type="submit" value="Create" />
                        {{ form_end(form) }}
                </div>
        </div>

        </main>

</div>
<div class="container">
        <div class="row">
                <div class="col-md-6">
                        <a href="{{ path('blog') }}" class="text-left button"><i class="fa fa-long-arrow-left" aria-hidden="true"> page précédente</i></a>
                </div>
                <div class="col-md-6 hidden-xs">
                        <a href="{{ path('blog') }}" class="text-right button">Retour <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
                </div>
        </div>
</div>


{% endblock %}

{% block JS %}
        {{ parent() }}

{% endblock %}





