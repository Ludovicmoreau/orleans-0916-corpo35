{% extends 'FrontBundle:Default:index.html.twig' %}
{% block stylesheet %}
   {# <link rel="stylesheet" href="{{ asset('css/listArticles_style.css') }}">#}
{% endblock %}

{% block content %}
    <div class="container list-articles">
        <div class="container-fluid blog">
            <div class="row">
                <div class="col-md-12 col-sm-6 col-xs-12">
                    <div class="row">

                    <h1 class="text-left"><i class="fa fa-pagelines pagelines_title" aria-hidden="true"></i> Notre actu</h1>

                    {% for article in listArticles %}
                    <div class="row">
                        <div class="blog-post">
                            <div class="col-md-4">
                                <h2 class="blog-title">{{ article.titre }}</h2>
                                <img class="img-responsive" src="{{ asset('upload/' ~  article.photo )}}">
                                <h5 class="date">{% if article.date %}{{ article.date|date('Y-m-d') }}{% endif %}</h5>
                            </div>
                            <div class="col-md-8">
                                <p class="blog-content"><blockquote>{{ article.contenu }}</blockquote></p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
            {#  {{ render(controller('BackBundle:Commentaire:newEmbed')) }}#}
                            <div class="panel-group">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" href="#collapse1">Commenatire <span class="badge">42</span></a>
                                        </h4>
                                    </div>
                                    <div id="collapse1" class="panel-collapse collapse">
                                        <div class="panel-body">Panel Body</div>
                                        <div class="panel-footer">Panel Footer</div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    {% endfor %}
                </div>
            </div>
            <a href="{{ path('blog') }}" class="button"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> Retour</a>
        </div>
    </div>





{% endblock %}

