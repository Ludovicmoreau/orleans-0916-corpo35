{% extends 'FrontBundle:Default:layout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/revuedepresse.css') }}">
    {% endblock %}

{% block header %}
    {% include 'FrontBundle:Default:header.html.twig' %}
{% endblock %}

{% block content %}
    {% for Rpresse in listRpresse %}
    <div class="wrap">
        <div class="col-md-4">
        <div class="tile">
            <img src="{{ asset('upload/'~Rpresse.document|e) }}" class="img-responsive profil" alt="">
            <div class="text">
                <h1 class="animate-text">{{ Rpresse.date|date('Y') }}</h1>
                <h2 class="animate-text">{{ Rpresse.source }}</h2>
                <p class="animate-text">{{ Rpresse.description }}</p>
            </div>
        </div>
        </div>

        <div class="tile">
            <img src='https://images.unsplash.com/photo-1458668383970-8ddd3927deed?dpr=1&auto=format&crop=entropy&fit=crop&w=1500&h=1004&q=80'/>
            <div class="text">
                <h1>Lorem ipsum.</h1>
                <h2 class="animate-text">More lorem ipsum bacon ipsum.</h2>
                <p class="animate-text">Bacon ipsum dolor amet pork belly tri-tip turducken, pancetta bresaola pork chicken meatloaf. Flank sirloin strip steak prosciutto kevin turducken. </p>
                <div class="dots">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>

        <div class="tile">
            <img src='https://images.unsplash.com/photo-1422393462206-207b0fbd8d6b?dpr=1&auto=format&crop=entropy&fit=crop&w=1500&h=1000&q=80'/>
            <div class="text">
                <h1>Lorem ipsum.</h1>
                <h2 class="animate-text">More lorem ipsum bacon ipsum.</h2>
                <p class="animate-text">Bacon ipsum dolor amet pork belly tri-tip turducken, pancetta bresaola pork chicken meatloaf. Flank sirloin strip steak prosciutto kevin turducken. </p>
                <div class="dots">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>

    </div>
    {% endfor %}
{% endblock %}
{% block footer %}
    {% include 'FrontBundle:Default:footer.html.twig' %}
{% endblock %}