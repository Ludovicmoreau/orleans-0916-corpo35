{% extends 'FrontBundle:Default:index.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('css/listPartenaires_style.css') }}">
{% endblock %}



{% block content %}
    <div class="container list-partners">
        {% for partenaire in listPartenaires %}
        <div class="row partner">
            <div class="col-md-3">
                <img class="img-responsive" src="{{ asset('upload/' ~  partenaire.logo )}}">
            </div>
            <div class="col-md-9">
                <p class="partner-resume">{{ partenaire.resume }}</p>
                <p>{{ partenaire.contenu }}</p>
                <div class="row i-fa-partner">
                    <div class="col-md-4"><p><i class="fa fa-globe" aria-hidden="true"> {{ partenaire.website }}</i></p></div>
                    <div class="col-md-4"><p><i class="fa fa-paper-plane-o" aria-hidden="true"> {{ partenaire.email }}</i></p></div>
                    <div class="col-md-4"><p><i class="fa fa-phone" aria-hidden="true"> {{ partenaire.phone }}</i></p></div>
                </div>
            </div>


        </div>
        {% endfor %}
    </div>





{% endblock %}

