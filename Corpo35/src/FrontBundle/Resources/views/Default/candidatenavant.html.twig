{% extends 'FrontBundle:Default:layout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/candidatEnAvant_style.css') }}">
{% endblock %}

{% block content %}
    <section>
        <div>
            <h1 class="text-center "> Candidat mis avant</h1>
            <p class="text-center">
            {{ candidat.prenom }} <br/>
            {{ candidat.nom }}    <br/>
            {{ candidat.ville }}  <br/>
            {{ candidat.adresse }}<br/>
                {{ candidat.cp }} <br/>
                <img src="{{ asset('upload/' ~ candidat.photo) }}" alt="photo profil">
            </p>
        </div>
    </section>
{% endblock %}
