{% extends 'FrontBundle:Default:layout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/candidatEnAvant_style.css') }}">
{% endblock %}

{% block content %}
    <section>
        <div class="container-fluid">

            <div class="presentation">
                <h1 class="text-center "> Candidat mis avant</h1>
                <div class="row ">
                        <div class="col-md-offset-1 col-md-3">
                            <div class="prenom">
                                Prénom :
                                {{ candidat.prenom }}
                            </div>
                            <div>
                                Nom :
                                {{ candidat.nom }}
                                <img id="photo" src="{{ asset('upload/' ~ candidat.photo) }}" alt="photo profil">
                            </div>
                            <div>
                                {% for document in candidat.documents %} {% if document.type == "image" %} <img
                                        src="{{ asset('upload/' ~ document.contenu) }}"
                                        class="img-responsive"><br/> {% elseif document.type == "vidéo" %}
                                    <video controls src="{{ asset('upload/' ~ document.contenu) }}"
                                           class="img-responsive "></video><br/> {% elseif document.type == "musique" %}
                                    <audio controls src="{{ asset('upload/' ~ document.contenu) }}"></audio>
                                    <br/> {% elseif document.type == "pdf" %} <a
                                        href="{{ asset('upload/' ~ document.contenu) }}" target="_blank">Voir le
                                    document</a> {% else %}
                <p>Le format du document n'est pas supporté</p> {% endif %} <h4>Lien</h4> <a href="{{ document.lien }}"
                                                                                             target="_blank">{{ document.lien }}</a> {% endfor %}
            </div>
        </div>

        <div class="col-md-offset-1 col-md-3">
           <p class="titre"> Présentation du candidat :</p> <br/>
           <p class="text"> {{ candidat.presentation | truncate(200, true,"...") }} </p>
        </div>
        <div class=" col-md-3">
           <p class="titre"> Motivation du candidat :</p> <br/>
          <p class="text"> {{ candidat.motivation | truncate(200, true,"...") }}</p>
        </div>


    </section>
{% endblock %}
